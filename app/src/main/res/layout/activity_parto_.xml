<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Parto_Activity">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="PARTO" />

    <EditText
        android:id="@+id/campoNuncerdaparto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Numero de la cerda" />

    <EditText
        android:id="@+id/campoNomcerdaparto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoNuncerdaparto"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre de la cerda" />

    <EditText
        android:id="@+id/campoFechaparto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoNomcerdaparto"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Fecha del parto" />

    <EditText
        android:id="@+id/campoLechonparto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoFechaparto"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Lechones producto del parto" />

    <EditText
        android:id="@+id/campoHevivas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoLechonparto"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Hembras vivas" />

    <EditText
        android:id="@+id/campoHemuertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoHevivas"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Hembras muertas" />

    <EditText
        android:id="@+id/campoMavivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoHemuertas"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Machos vivos" />

    <EditText
        android:id="@+id/campoMamuertos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoMavivos"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Machos muertos" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Registrar parto" />
</RelativeLayout>