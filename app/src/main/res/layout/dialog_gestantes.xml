<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/dialog_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCerda"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Id Cerda"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_idCerda"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipomonta"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Tipo de Monta:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_tipomonta"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Fecha_Monta"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Fecha de Monta:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/FechaMonta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:hint="Fecha de la Monta"
                android:inputType="date"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idverraco"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Id de Verraco"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_idverraco"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idpajilla"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Id Pajilla:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_idPajilla"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblestado"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="Estado:"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sp_estadoprenez"
                android:layout_width="233dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/spacing_large"
                android:spinnerMode="dropdown"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/bt_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Guardar"/>

            <Button
                android:id="@+id/bt_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancelar" />
            <Button
                android:id="@+id/bt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ELIMINAR" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
