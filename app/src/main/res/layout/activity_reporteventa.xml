<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reporteventa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoEdadConsuVe"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

       <!-- <EditText
            android:id="@+id/campoIdConsuVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="Nombre"
            android:inputType="number" />-->

        <Spinner
            android:id="@+id/comboIdConsuVe"
            android:layout_width="142dp"
            android:layout_height="40dp"
            android:layout_weight="0.6" />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.4"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="Buscar" />

    </LinearLayout>

    <EditText
        android:id="@+id/campoEdadConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPesoConsuVe"
        android:layout_alignParentStart="true"
        android:hint="Edad"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/campoPesoConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPreConsuVe"
        android:layout_alignParentStart="true"
        android:hint="Peso vivo en Kg"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/campoPreConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="230dp"
        android:hint="Precio"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="Actualizar" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:onClick="onClick"
            android:textStyle="bold"
            android:text="ce" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="VENTA DE CERDO"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="CONSULTAR Y EDITAR"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!--<Spinner
        android:id="@+id/comboIdConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp" />-->

</RelativeLayout>