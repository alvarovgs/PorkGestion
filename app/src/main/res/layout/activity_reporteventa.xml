<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reporteventa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoNomConsuVe"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/campoIdConsuVe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="Numero"
            android:inputType="number" />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Buscar" />

    </LinearLayout>

    <EditText
        android:id="@+id/campoNomConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoFeConsuVe"
        android:layout_alignParentStart="true"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoFeConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPeConsuVe"
        android:layout_alignParentStart="true"
        android:hint="Fecha de venta"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoPeConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPreConsuVe"
        android:layout_alignParentStart="true"
        android:hint="Peso vivo en Kg"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Actualizar" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:onClick="onClick"
            android:text="ce" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="CONSULTA DE VENTA POR CERDO"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/campoPreConsuVe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="194dp"
        android:ems="10"
        android:hint="Precio en pesos"
        android:inputType="textPersonName" />

</RelativeLayout>