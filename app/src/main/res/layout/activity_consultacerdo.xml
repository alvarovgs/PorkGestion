<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consultacerdo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/campoIdConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="Numero"
            android:inputType="text" />

        <Button
            android:id="@+id/btnConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Buscar" />


    </LinearLayout>

    <EditText
        android:id="@+id/campoNombreConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoFechanaceConsulta"
        android:layout_alignParentStart="true"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoFechanaceConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPesonaceConsulta"
        android:layout_alignParentStart="true"
        android:hint="Fecha de nacimiento"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoPesonaceConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoSexoConsulta"
        android:layout_alignParentStart="true"
        android:hint="Peso al nacer"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Actualizar" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:onClick="onClick"
            android:text="ce" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="CERDO"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/campoSexoConsulta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/campoRazaConsulta"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/campoRazaConsulta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/campoNombremadreConsulta"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/campoNombremadreConsulta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/campoNombrepadreConsulta"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/campoNombrepadreConsulta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="128dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="CONSULTAR Y EDITAR"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>