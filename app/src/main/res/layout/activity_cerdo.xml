<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cerdo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cerdo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CERDO"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/campoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:hint="Numero del cerdo"
        android:inputType="number" />

    <EditText
        android:id="@+id/campoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoId"
        android:hint="Nombre del cerdo"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoFechanace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoNombre"
        android:hint="Fecha de nacimiento"
        android:inputType="text" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="Registrar Cerdo" />

    <EditText
        android:id="@+id/campoPesonace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campoFechanace"
        android:hint="Peso al nacer"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/campoNombremadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/comboRazas"
        android:ems="10"
        android:hint="Nombre de la madre"
        android:inputType="text" />

    <EditText
        android:id="@+id/campoNombrepadre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/campoNombremadre"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Nombre del padre"
        android:inputType="text" />

    <Spinner
        android:id="@+id/comboRazas"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/comboSexo" />

    <Spinner
        android:id="@+id/comboSexo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/campoPesonace" />


</RelativeLayout>