<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReporteProduccionActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp">

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Fechas para la generaciÃ³n del reporte:"
             />
     </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
         <EditText
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Fecha Inicial"
             android:id="@+id/et_FechaInicial"/>
         <EditText
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Fecha Final"
             android:id="@+id/et_FechaFinal"/>
         <Button
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:hint="CONSULTAR"
             android:id="@+id/bt_Reporte"/>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:orientation="vertical">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="REPORTE GENERAL DE PRODUCCION"
             android:textSize="20dp"
             android:textStyle="bold"
             android:textAlignment="center"
             />

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

      <TextView
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="F. Inicio"
          />

      <TextView
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="F. Final"
          />

      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="Machos"
          />

      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="Hembras"
          />
      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="Total"
          />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

      <TextView
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="01/03/2018"
          android:id="@+id/lblFechaInicio"
          />

      <TextView
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="30/03/2018"
          android:id="@+id/lblFechaFinal"
          />

      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:text="20"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textSize="8pt"
          android:id="@+id/lblMachos"
          />

      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:text="10"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textSize="8pt"
          android:id="@+id/lblHembras"
          />
      <TextView
          android:layout_width="65dp"
          android:layout_height="wrap_content"
          android:text="30"
          android:textAlignment="center"
          android:textStyle="bold"
          android:textSize="8pt"
          android:id="@+id/lblTotal"
          />
     </LinearLayout>

     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:text="VENTAS"
          android:textSize="16dp"
          android:textStyle="bold"
          android:textAlignment="center"
          android:background="@color/blue_50"
          />
      <TextView
          android:layout_width="195dp"
          android:layout_height="wrap_content"
          android:text="PARTOS"
          android:textSize="16dp"
          android:textStyle="bold"
          android:textAlignment="center"
          android:background="@color/amber_50"
          />
  </LinearLayout>

     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
         <LinearLayout
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/blue_50"
             >
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="Cantidad:"
                      />
                  <TextView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:textSize="8pt"
                      android:text="5"
                      android:id="@+id/lblTotalVentas"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="Machos:"
                      />
                  <TextView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:textSize="8pt"
                      android:text="3"
                      android:id="@+id/lblTotalVentasMachos"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="Hembras:"
                      />
                  <TextView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:textSize="8pt"
                      android:text="5"
                      android:id="@+id/lblTotalVentasHembras"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="Valor Total:"
                      />
                  <TextView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:textSize="7pt"
                      android:text="2.500.000"
                      android:id="@+id/lblValorTotalVentas"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:text="Prom. Peso:"
                      />
                  <TextView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:textAlignment="center"
                      android:textStyle="bold"
                      android:textSize="7pt"
                      android:text="350"
                      android:id="@+id/lblPromedioPesoventa"
                      />
              </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:layout_width="145dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/amber_50">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Cantidad:"
               />
           <TextView
               android:layout_width="45dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="8pt"
               android:text="5"
               android:id="@+id/lblTotalpartos"
               />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Machos Vivos:"
               />
           <TextView
               android:layout_width="45dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="8pt"
               android:text="3"
               android:id="@+id/lblTotalMachosVivos"
               />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Hembras Vivas:"
               />
           <TextView
               android:layout_width="45dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="8pt"
               android:text="5"
               android:id="@+id/lblTotalHembrasVivas"
               />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Mach. Muertos:"
               />
           <TextView
               android:layout_width="45dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="7pt"
               android:text="1"
               android:id="@+id/lblTotalMachosMuertos"
               />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
           <TextView
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:text="Hemb. Muertas:"
               />
           <TextView
               android:layout_width="45dp"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textSize="7pt"
               android:text="3"
               android:id="@+id/lblTotalHembrasMuertas"
               />
          </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical|center_horizontal|center"
             android:background="@color/amber_50">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal|center"
              android:text="IM"
              android:textAlignment="center" />
          <TextView
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal|center"
              android:text="10%"
              android:textSize="7pt"
              android:textStyle="bold"
              android:textAlignment="center"
              android:id="@+id/lblIM"/>
           </LinearLayout>
         </LinearLayout>




  </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:textAlignment="center"
         >
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="REGRESAR"
             android:id="@+id/bt_Regresar"
             />
     </LinearLayout>
 </LinearLayout>

</android.support.constraint.ConstraintLayout>