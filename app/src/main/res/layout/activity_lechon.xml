<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lechon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f2f2"
    tools:context=".lechon">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="roboto"
        android:text="LECHON"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_nomba"
        android:layout_alignParentStart="true"
        android:text="ID del animal"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/edtxt_descripajilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-150dp"
        android:text="Nombre del animal"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="150dp"
        android:text="Fecha de nacimiento"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="200dp"
        android:text="Peso al nacer/Kg"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="250dp"
        android:text="Sexo"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="290dp"
        android:text="Raza"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="197dp"
        android:text="ID de la madre"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="139dp"
        android:text="Id de Padre"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/et_numa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtxt_descripajilla"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/et_nomba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtxt_descripajilla"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/et_fena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date" />

    <EditText
        android:id="@+id/et_pena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:ems="10"
        android:hint="Peso"
        android:inputType="number" />

    <Spinner
        android:id="@+id/sp_sexo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/et_numa"
        android:layout_alignStart="@+id/et_numa"
        android:layout_alignTop="@+id/textView5"
        android:entries="@array/sexo" />

    <Spinner
        android:id="@+id/sp_raza"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/et_numa"
        android:layout_alignStart="@+id/et_numa"
        android:layout_alignTop="@+id/textView6"
        android:entries="@array/raza" />

    <EditText
        android:id="@+id/et_nommad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="Madre"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/et_nompad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:hint="Padre"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/btn_eliminar"
        android:layout_toEndOf="@+id/btn_back"
        android:layout_toRightOf="@+id/btn_back"
        android:text="GUARDAR"
        android:textSize="10sp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/edtxt_descripajilla"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:text="BORRAR"
        android:textSize="10sp"
        tools:ignore="OnClick"
        android:layout_alignRight="@+id/edtxt_descripajilla" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="REGRESAR" />


</RelativeLayout>