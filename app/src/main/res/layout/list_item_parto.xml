<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNombreCerda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la cerda"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/lblFechaParto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha del parto"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/lblCerdosVivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Cerdos Vivos"
            android:textColor="@android:color/holo_blue_dark" />
        <TextView
            android:id="@+id/lblCerdosMuertos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Cerdos Muertos"
            android:textColor="@android:color/holo_blue_dark" />
        <TextView
            android:id="@+id/lblIndiceMortalidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="indice de mortalidad"
            android:textColor="@android:color/holo_blue_dark" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
