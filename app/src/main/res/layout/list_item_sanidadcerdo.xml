<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="7dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblCodigoCerdo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Cerdo:"
                android:textColor="@android:color/holo_red_dark" />
            <TextView
                android:id="@+id/tvCodigoCerdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código del cerdo"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgSexo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/macho"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblTipoMed"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:text="Tipo Med.:"/>
            <TextView
                android:id="@+id/tvTipoMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:text="Tipo medicamento"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblNombreMed"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:text="Medicamento:"/>
            <TextView
                android:id="@+id/tvNombreMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:text="Nombre medicamento"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblFechaAdmin"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:text="Fec. Aplicación:"/>
            <TextView
                android:id="@+id/tvFechaAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:text="Fecha de administración"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblDosis"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:text="Dosis:"/>
            <TextView
                android:id="@+id/tvDosis"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:text="Dosis"/>
            <TextView
                android:id="@+id/lblViaAdmin"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:text="Vía Admin.:"/>
            <TextView
                android:id="@+id/tvViaAdmin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:text="Via Admin"/>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
