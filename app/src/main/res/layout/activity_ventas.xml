<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ventas">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="VENTA"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/campoNumeroAniVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoNombAniVenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Numero del cerdo"
        android:inputType="number" />

    <EditText
        android:id="@+id/campoNombAniVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoFechaVenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Nombre del cerdo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campoFechaVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPesoVenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Fecha de venta"
        android:inputType="date" />

    <EditText
        android:id="@+id/campoPesoVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/campoPrecioVenta"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Peso vivo en Kg"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/campoPrecioVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="230dp"
        android:ems="10"
        android:hint="Precio en pesos"
        android:inputType="number" />


    <Button
        android:id="@+id/btnRegistroVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:text="Registrar Venta de Cerdo" />


</RelativeLayout>