<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/dialog_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTipoMed"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:layout_marginLeft="@dimen/spacing_large"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/sp_tipoMed"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_height="40dp"
                android:spinnerMode="dropdown">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNombreMed"
                android:layout_width="90dp"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_nombreMed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/spacing_large"
                android:hint="Nombre de medicamento"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblDescMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_large"
            android:text="Descripción Medicamento:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_descMed"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/spacing_large"
            android:hint="Descripción / Recomendaciones"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/bt_save"
                style="@android:style/Widget.Material.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Guardar"/>

            <Button
                android:id="@+id/bt_close"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancelar" />
            <Button
                android:id="@+id/bt_delete"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Borrar" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
